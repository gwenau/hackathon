
<h1>Word Shuffle</h1>
  <div class="main_content" ng-controller="AlbumCtrl">
  
  <br>
  <div class="counter">
    <!-- <button ng-click="stop()">Stop</button>  -->
    <!-- <button ng-click='startTimer()'>Start</button> -->
       {{ counter }}
    <button ng-click='stopTimer()'>Stop</button>
  </div>

  <div class="play_game_box">
    <h3 class="word"><%= @word_shuffled %></h3>

    <form name="answerForm" ng-submit="submitAnswer()" novalidate>  
      <!-- The models are collecting the data -->
      <label>Word: </label>  
      <input type="text" ng-model="answer" required ng-minlength="3"/><br> 
      <input id="hidden" type="hidden"  value="<%= @word %>"></input><br>
      <button>Submit</button>  
    </form>

    <div class="winner" ng-show="correct">Congrats!</div>

    <div class="loser" ng-show="wrong">No, your shit!</div>
    <br>
    <button><a href="/">New Game</a></button>
  </div>

</div>

